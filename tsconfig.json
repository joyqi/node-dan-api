{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib/mjs",
    "removeComments": true,
    "declarationDir": "lib/types",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "lib"]
}
